<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.atguigu.dao.HouseUserDao">

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        select id,house_id,name,phone,sex,id_no,create_time,update_time,is_deleted from hse_house_user
    </sql>


    <!--根据房源id和类型查询房源id或房产图片-->
    <select id="getHouseUsersByHouseId" resultType="houseUser">
        <include refid="columns"></include>
        where house_id = #{houseId} and is_deleted = 0
    </select>

</mapper>